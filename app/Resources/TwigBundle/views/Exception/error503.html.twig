{% extends ':templates:base_error.html.twig' %}
{% set _locale =  app.request.locale %}
{% block main %}
    <h1>{{ 'http_error.name'|trans({ '%status_code%': 503 }, "messages", _locale) }} -&nbsp;</h1><h2>{{ 'http_error_503.description'|trans({}, "messages", _locale) }}</h2>
    <hr>
    <p>
        {{ 'http_error_503.suggestion'|trans({}, "messages", _locale) }}
    </p>
{% endblock %}