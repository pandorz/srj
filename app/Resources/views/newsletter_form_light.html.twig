        <label class="fldLabel u-hiddenVisually" for="fld-email-newsletter">Adresse e-mail:</label>
        <input class="fld" type="email" name="newsletter_email" placeholder="Mon adresse email">
    </div>
    <div class="js-container-grecaptcha"></div>
    <button class="btn js-button-grecaptcha" data-grecaptcha-key="{{ google_recaptcha_public_token }}">Me tenir inform√©(e) svp !</button>
</form>

