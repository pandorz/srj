<header class="siteHeader">
    <div class="siteHeaderCtn u-fitted">
        <span class="siteTitle">
            <a class="siteHomeLink" href="/"><img class="siteLogo" src="{{ asset('medias/img/logo-rouen-japon.png') }}" alt="Rouen Japon" width="170" height="55"></a>
        </span>

        <nav class="mainNav">
            <button class="toggleNav"><span class="u-hiddenVisually">Afficher/cacher le menu de navigation</span></button>
            <div class="mainNavContent">
                <ul class="mainNavList u-ul-mute">
                    <li class="mainNavItem">
                        <a class="mainNavLink" href="{{path('association')}}">L'association</a>
                    </li>
                    <li class="mainNavItem has-subMenu">
                        <a class="mainNavLink">Nos activités</a>
                        <ul class="mainSubNavList">
                            <li class="mainSubNavItem has-subMenu">
                                <a class="mainSubNavLink" href="#">Les cours</a>
                                <ul class="mainSubSubNavList">
                                    <li class="mainSubSubNavItem">
                                        {% for item_cours in liste_cours_nav() %}
                                            <a class="mainSubSubNavLink" href="{{path('cours')}}#{{ item_cours.ancre }}">{{ item_cours.titre }}</a>
                                        {% endfor %}
                                    </li>
                                </ul>
                            </li>
                            <li class="mainSubNavItem"><a class="mainSubNavLink" href="{{path('ateliers')}}">Ateliers</a></li>
                            <li class="mainSubNavItem"><a class="mainSubNavLink" href="{{path('sorties')}}">Sorties</a></li>
                        </ul>
                    </li>
                    <li class="mainNavItem"><a class="mainNavLink" href="{{path('evenements')}}">Événements</a></li>
                    <li class="mainNavItem"><a class="mainNavLink" href="{{path('actualites')}}">Actualités</a></li>
                    {% if is_actif_blog() %}
                    <li class="mainNavItem"><a class="mainNavLink" href="{{path('blog')}}">Blog</a></li>
                    {% endif %}
                    <li class="mainNavItem"><a class="mainNavLink" href="{{path('presentation_japonaise')}}" lang="ja">日本人です</a></li>
                    <li class="mainNavItem"><a class="mainNavLink" href="{{path('contact')}}">Contact</a></li>
                </ul>
                <div class="mainNavMember">
                    {% if lien_adhesion() is not empty %}
                    <a class="mainNavMemberLink signup btn btn-blank btn-small" href="{{ lien_adhesion() }}" target="_blank">Devenir membre</a>
                    {% endif %}
                    {#<a class="mainNavMemberLink login" href="#">Déjà membre ?</a>#}
                    {% if app.user and is_granted('ROLE_SONATA_ADMIN')%}
                        <a class="mainNavMemberLink admin" href="{{ path('sonata_admin_dashboard') }}" target="_blank">Administration</a>
                    {% endif %}
            </div>
            </div>
        </nav>
    </div>
</header>