{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-warning" role="alert">
        {{ flashMessage }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{% endfor %}
