{% set route_attribut = app.request.attributes.get('_route_params') %}
{% trans_default_domain 'front' %}

{% if route_attribut['plus']=='voir-tout' %}
    {% set text_button = 'general.button.see_less'|trans %}
    {% set route_attribut= route_attribut|merge({'plus':'recent'}) %}
{% else %}
    {% set text_button = 'general.button.see_more'|trans %}
    {% set route_attribut= route_attribut|merge({'plus':'voir-tout'}) %}
{% endif %}
{% set href = path(app.request.attributes.get('_route'), route_attribut) %}
<div class="seeAllPosts"><a class="btn btn-blank-secondary" href="{{ href }}">{{ text_button }}</a></div>