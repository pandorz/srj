{% trans_default_domain 'front' %}
<section class="lastNews u-fitted">
    <h3 class="lastNewsTitle">{{ 'general.title.actualites'|trans }}</h3>
    <div class="postsList newsList">
    {% for actualite in actualites %}       
        <div class="postItem shortPost newsItem">
            <div class="postItemCtn newsItemCtn">
                {% media actualite.image, 'reference' with {'class': 'postPhoto newsPhoto'} %}
                <h4 class="postTitle newsTitle">{{ actualite.nom }}</h4>                    
                <div class="postSummary newsSummary">{% if actualite.contenu|length > 99 %}{{ crop_entete_texte(actualite.contenu)|raw }}{% else %}{{ actualite.contenu|raw }}{% endif %}</div>
                {% if actualite.contenu|length > 99 %}
                <div class="postMoreText" style="display: none;">
                    {{ get_corps_texte(actualite.contenu)|raw }}
                </div>
                {% if actualite.contenu|length > 99 %}
                <button class="seeMore" aria-hidden="true">{{ 'general.button.know_more'|trans }}</button>
                {% endif %}
                {% endif %}
            </div>
        </div>
    {% endfor %}    
        <div class="seeAllPosts"><a class="btn btn-blank-secondary" href="{{path('actualites')}}">{{ 'actualite.button.see_all'|trans }}</a></div>
    </div>
</section>