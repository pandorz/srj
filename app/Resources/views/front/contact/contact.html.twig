{% extends "front/template/base_front.html.twig" %}
{% trans_default_domain 'front' %}
{% block body_class %}contact{% endblock %}
{% set meta_title = 'contact.meta.title'|trans %}
{% block html_title %} - {{ meta_title }}{% endblock %}
{% block og_meta %}
    {% include 'front/template/basique_meta_pages.html.twig' %}
{% endblock %}
{% block main %}
    {% include 'front/bandeau/bandeau_jap.html.twig' %}

    <section class="section u-fitted">
        <h2 class="sectionTitle">{{ 'contact.title'|trans }}</h2>
        {{ form_start(form, {'attr': {
                        'class': 'contactForm js-form-grecaptcha'
                    }}) }}
        {% include 'front/template/flash_messages.html.twig' %}
        {{ form_errors(form) }}
            <div class="grid-2">
                <div>
                    <div class="formItem">
                    {{ form_row(form.nom) }}
                    </div>
                    <div class="formItem">
                    {{ form_row(form.prenom) }}
                    </div>
                    <div class="formItem">
                    {{ form_row(form.email) }}
                    </div>
                    <div class="formItem">
                    {{ form_row(form.objet) }}
                    </div>
                </div>
                <div>
                    <div class="formItem">
                        {{ form_row(form.message) }}
                    </div>
                </div>    
            </div>
            <div class="js-container-grecaptcha"></div>
            <button class="btn js-button-grecaptcha" type="submit" data-grecaptcha-key="{{ google_recaptcha_public_token }}">{{ 'contact.button'|trans }}</button>
        {{ form_end(form) }}
    </section>

    {% include 'front/bandeau/bandeau_devenir_membre.html.twig' %}
    {% include 'front/bandeau/follow_us.html.twig' %}
    
{% endblock %}