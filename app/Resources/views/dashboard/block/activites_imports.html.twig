{% extends sonata_block.templates.block_base %}
{# TODO LTS: Style #}
{% block block %}
    <!-- small box -->
    <div class="small-box {{ settings.color }}">
        <div class="inner">
            <h3>{{ count }}</h3>

            <p>{{ settings.text|trans({}, admin.translationDomain) }}</p>
        </div>
        <div class="icon">
            <i class="fa {{ settings.icon }}"></i>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {% for objet in objets %}
                    {# TODO LTS: Contenu, liens en ajax ? #}
                    <p>
                        {{ objet.nbLignesFichier }} import√©s le {{ objet.timestampCreation|date("d/m/Y") }} par <a href="{{ path('admin_app_utilisateur_show', {'id': objet.fkUtilisateur.id}) }}">{{ objet.fkUtilisateur }}</a>
                    </p>

                {% endfor %}
            </div>
        </div>
        <a href="{{ admin.generateUrl('list', {filter: settings.filters}) }}" class="small-box-footer">
            {{ 'stats_view_more'|trans({}, 'SonataAdminBundle') }} <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
        </a>
    </div>
{% endblock %}